<% if @turn == false %>
  <h1 style="color:#004d00;size:6;text-align:center;">
    <%= @player_1.name %> viciously attacked arch-nemesis, <%= @player_2.name %>!!!
  </h1>
  <h2 style="color:#004d00;size:6;text-align:center;">
    <%= @player_2.name %> got hit! Shitballs! <%= @player_2.name %>'s health is now at: <%=@player_2.hit_points%>HP
  </h2>
<% else %>
  <h1 style="color:#004d00;size:6;text-align:center;">
    <%= @player_2.name %> viciously attacked arch-nemesis, <%= @player_1.name %>!!!
  </h1>
  <h2 style="color:#004d00;size:6;text-align:center;">
    <%= @player_1.name %> got hit! Shitballs! <%= @player_1.name %>'s health is now at: <%=@player_1.hit_points%>HP
  </h2>
<% end %>

Player2
<p><progress value="<%= @player_2.hit_points %>" max="100"> </progress></p>
Player1
<p><progress value="<%= @player_1.hit_points %>" max="100"> </progress></p>

